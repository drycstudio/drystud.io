{
	"$schema": "https://json.schemastore.org/tsconfig",
	"include": ["src/**/*", "**/*.spec.{ts,tsx}", "**/*.test.{ts,tsx}"],
	"display": "Node 16",
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"types": ["@types/node", "jest", "@types/jest"],
		"target": "esnext",
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"strict": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"lib": ["dom", "dom.iterable", "es2018"],
		"isolatedModules": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@config/*": ["src/config/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@contexts/*": ["src/contexts/*"],
			"@global-types/*": ["src/@types/*"],
			"@helpers/*": ["src/helpers/*"],
			"@hooks/*": ["src/hooks/*"],
			"@project-types/*": ["src/types/*"],
			"@theme/*": ["src/theme/*"],
			"@utils/*": ["src/utils/*"]
		},
		"typeRoots": ["src/@types"],
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"package.json",
		"dist",
		"lib",
		"esm",
		"tests",
		"stories",
		"babel.config.js",
		"jest.config.ts",
		"jest.setup.ts",
		"jest.config.*.ts"
	]
}
