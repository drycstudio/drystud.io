{
    // Added
    "exclude": [
        "**/tests",
        "**/*.test.js",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/spec",
        "**/*.spec.js",
        "**/*.spec.ts",
        "**/*.spec.tsx",
    ],
    "compilerOptions": {
        // Default
        "target": "es2018",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,

        // Added
        "jsx": "react",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "types",
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
    },
}