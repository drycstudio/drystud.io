{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": ["ES2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@apps/*": ["apps/*"],
      "@euclidesdry/*": ["packages/*"]
    }
  },
  "exclude": ["node_modules", "**/*.d.ts", "./**/package.json", "apps/example", "packages/config-eslint/**/*.js"]
}
